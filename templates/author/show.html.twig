{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="mb-1">Author: {{ author.name }}</h1>
    <p class="mb-1">{{ author.lifetime }}</p>

    {{ include('book/_preview.html.twig', { books: author.books }) }}

    {% if is_granted('ROLE_ADMIN') %}
        <hr class="mb-1">
        <ul class="entity__actions">
            <li>
                <a href="{{ path('author_delete', { id: author.id }) }}">
                    Delete
                </a>
            </li>
            <li>
                <a href="{{ path('author_update', { id: author.id }) }}">
                    Update
                </a>
            </li>
        </ul>
    {% endif %}
{% endblock %}
